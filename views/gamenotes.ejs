          <form action="/add-game" method="POST" class="row g-3 align-items-center">
            <div class="col-md-5">
              <input type="text" class="form-control" id="gameName" name="gameName"
                     placeholder="–ù–∞–∑–≤–∞–Ω–∏–µ –∏–≥—Ä—ã" required>
            </div>

