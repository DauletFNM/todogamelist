      <!-- –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –Ω–æ–≤–æ–π –∏–≥—Ä—ã -->
      <div class="card shadow-lg mb-4 bg-dark text-white border-primary">
        <div class="card-body p-4">
          <h5 class="card-title text-warning">
            <i class="fas fa-plus-circle me-2"></i> –î–æ–±–∞–≤–∏—Ç—å –Ω–æ–≤—É—é –∏–≥—Ä—É
          </h5>

          <form action="/add-game" method="POST" class="row g-3 align-items-center">
            <div class="col-md-5">
              <input type="text" class="form-control" name="gameName"
                     placeholder="–ù–∞–∑–≤–∞–Ω–∏–µ –∏–≥—Ä—ã" required>
            </div>

            <div class="col-md-3">
              <select class="form-select" name="gameStatus" required>
                <option value="" disabled hidden>–í—ã–±–µ—Ä–∏—Ç–µ —Å—Ç–∞—Ç—É—Å...</option>
                <option value="completed">‚úÖ –ü—Ä–æ–π–¥–µ–Ω–æ</option>
                <option value="playing">üéÆ –ò–≥—Ä–∞—é</option>
                <option value="planned">üóìÔ∏è –ü–ª–∞–Ω–∏—Ä—É—é</option>
                <option value="abandoned">üëé –ë—Ä–æ—Å–∏–ª</option>
              </select>
            </div>

            <div class="col-md-2">
              <input type="number" class="form-control" name="gameRating"
                     placeholder="–û—Ü–µ–Ω–∫–∞ (1-10)" min="1" max="10">
            </div>

            <div class="col-12">
              <textarea class="form-control" name="gameComment" rows="2"
                        placeholder="–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π..."></textarea>
            </div>

            <div class="col-12 d-grid">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-1"></i> –î–æ–±–∞–≤–∏—Ç—å –∏–≥—Ä—É
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- –¢–∞–±–ª–∏—Ü–∞ –∏–≥—Ä -->
      <div class="card shadow-lg bg-light">
        <div class="card-body p-0">
          <% const completed = games.filter(g => g.status === 'completed'); %>
          <% const playing = games.filter(g => g.status === 'playing'); %>
          <% const planned = games.filter(g => g.status === 'planned'); %>
          <% const abandoned = games.filter(g => g.status === 'abandoned'); %>

          <% const renderList = (title, color, arr) => { %>
            <h4 class="p-3 text-<%= color %> fw-bold"><%= title %></h4>
            <% if (arr.length > 0) { %>
              <div class="table-responsive mb-4">
                <table class="table table-striped table-hover align-middle">
                  <thead class="table-dark">
                    <tr>
                      <th>–ù–∞–∑–≤–∞–Ω–∏–µ</th>
                      <th>–û—Ü–µ–Ω–∫–∞</th>
                      <th>–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π</th>
                      <th class="text-end">–î–µ–π—Å—Ç–≤–∏—è</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% arr.forEach(g => { %>
                      <tr>
                        <td><%= g.game_name %></td>
                        <td>
                          <% if (g.rating !== null && g.rating !== undefined) { %>
                            <span class="badge bg-success fs-6"><%= g.rating %>/10</span>
                          <% } else { %>
                            <span class="text-muted">N/A</span>
                          <% } %>
                        </td>
                        <td><%= g.comment ? g.comment : '-' %></td>
                        <td class="text-end">
                          <form action="/delete-game" method="POST" class="d-inline">
                            <input type="hidden" name="gameId" value="<%= g.id %>">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                              <i class="fas fa-trash-alt me-1"></i> –£–¥–∞–ª–∏—Ç—å
                            </button>
                          </form>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <p class="text-muted text-center pb-3">–ù–µ—Ç –∏–≥—Ä —Å–æ —Å—Ç–∞—Ç—É—Å–æ–º "<%= title %>".</p>
            <% } %>
          <% } %>

          <% renderList("‚úÖ –ü—Ä–æ–π–¥–µ–Ω–æ", "success", completed); %>
          <% renderList("üéÆ –ò–≥—Ä–∞—é", "info", playing); %>
          <% renderList("üóìÔ∏è –ü–ª–∞–Ω–∏—Ä—É—é", "warning", planned); %>
          <% renderList("üëé –ë—Ä–æ—Å–∏–ª", "danger", abandoned); %>
        </div>
