<%- include('parts/header.ejs') %>
<main class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">

      <h1 class="text-warning mb-4 fw-bold text-center">
        <i class="fas fa-trophy me-2"></i> –ú–æ–∏ –ò–≥—Ä—ã
      </h1>

      <div class="text-end mb-3">
        <a href="/logout" class="btn btn-outline-danger">
          <i class="fas fa-sign-out-alt me-1"></i> –í—ã–π—Ç–∏
        </a>
      </div>

      <!-- –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –Ω–æ–≤–æ–π –∏–≥—Ä—ã -->
      <div class="card shadow-lg mb-4 bg-dark text-white border-primary">
        <div class="card-body p-4">
          <h5 class="card-title text-warning"><i class="fas fa-plus-circle me-2"></i> –î–æ–±–∞–≤–∏—Ç—å –Ω–æ–≤—É—é –∏–≥—Ä—É</h5>
          <form action="/add-game" method="POST" class="row g-3 align-items-center">

            <div class="col-md-5">
              <input type="text" name="gameName" class="form-control" placeholder="–ù–∞–∑–≤–∞–Ω–∏–µ –∏–≥—Ä—ã" required>
            </div>

            <div class="col-md-3">
              <select name="gameStatus" class="form-select" required>
                <option value="" disabled selected>–°—Ç–∞—Ç—É—Å...</option>
                <option value="completed">‚úÖ –ü—Ä–æ–π–¥–µ–Ω–æ</option>
                <option value="playing">üéÆ –ò–≥—Ä–∞—é</option>
                <option value="planned">üóìÔ∏è –ü–ª–∞–Ω–∏—Ä—É—é</option>
                <option value="abandoned">üëé –ë—Ä–æ—Å–∏–ª</option>
              </select>
            </div>

            <div class="col-md-2">
              <input type="number" name="gameRating" class="form-control" placeholder="–û—Ü–µ–Ω–∫–∞ (1-10)" min="1" max="10">
            </div>

            <div class="col-12">
              <textarea name="gameComment" class="form-control" rows="2" placeholder="–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π..."></textarea>
            </div>

            <div class="col-12 d-grid">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-1"></i> –î–æ–±–∞–≤–∏—Ç—å –∏–≥—Ä—É
              </button>
            </div>

          </form>
        </div>
      </div>

      <!-- –ò–≥—Ä—ã –ø–æ –∫–∞—Ç–µ–≥–æ—Ä–∏—è–º -->
      <div class="card shadow-lg bg-light">
        <div class="card-body p-0">
          <ul class="nav nav-tabs nav-fill" id="gameTabs" role="tablist">
            <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#completed">‚úÖ –ü—Ä–æ–π–¥–µ–Ω–Ω—ã–µ</button></li>
            <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#playing">üéÆ –ò–≥—Ä–∞—é</button></li>
            <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#planned">üóìÔ∏è –ü–ª–∞–Ω–∏—Ä—É—é</button></li>
            <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#abandoned">üëé –ë—Ä–æ—à–µ–Ω–Ω—ã–µ</button></li>
          </ul>

          <div class="tab-content p-3">
            <% 
              const completedGames = games.filter(g => g.status === 'completed');
              const playingGames = games.filter(g => g.status === 'playing');
              const plannedGames = games.filter(g => g.status === 'planned');
              const abandonedGames = games.filter(g => g.status === 'abandoned');
              const renderGames = (arr, badgeColor) => { %>

              <% if (arr.length > 0) { %>
                <div class="table-responsive mb-4">
                  <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                      <tr>
                        <th>–ù–∞–∑–≤–∞–Ω–∏–µ</th>
                        <th>–û—Ü–µ–Ω–∫–∞</th>
                        <th>–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π</th>
                        <th class="text-end">–î–µ–π—Å—Ç–≤–∏—è</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% arr.forEach(game => { %>
                        <tr>
                          <td><%= game.game_name %></td>
                          <td>
                            <% if (game.rating !== null) { %>
                              <span class="badge bg-<%= badgeColor %> fs-6"><%= game.rating %>/10</span>
                            <% } else { %>
                              <span class="text-muted">-</span>
                            <% } %>
                          </td>
                          <td><%= game.comment ? game.comment : '-' %></td>
                          <td class="text-end">
                            <form action="/delete-game" method="POST" class="d-inline">
                              <input type="hidden" name="gameId" value="<%= game.id %>">
                              <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash-alt me-1"></i> –£–¥–∞–ª–∏—Ç—å
                              </button>
                            </form>
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              <% } else { %>
                <p class="text-center text-muted pt-3">–ù–µ—Ç –∏–≥—Ä –≤ —ç—Ç–æ–π –∫–∞—Ç–µ–≥–æ—Ä–∏–∏</p>
              <% } %>
            <% } %>

            <div class="tab-pane fade show active" id="completed">
              <% renderGames(completedGames, "success") %>
            </div>
            <div class="tab-pane fade" id="playing">
              <% renderGames(playingGames, "info") %>
            </div>
            <div class="tab-pane fade" id="planned">
              <% renderGames(plannedGames, "warning") %>
            </div>
            <div class="tab-pane fade" id="abandoned">
              <% renderGames(abandonedGames, "danger") %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</main>
<%- include('parts/footer.ejs') %>
