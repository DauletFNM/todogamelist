            </div>

            <div class="col-12">
              <textarea class="form-control" id="gameComment" name="gameComment"
                        rows="2" placeholder="–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π..."></textarea>
            </div>

            <div class="col-12 d-grid">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-1"></i> –î–æ–±–∞–≤–∏—Ç—å –∏–≥—Ä—É
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- –¢–∞–±–ª–∏—Ü–∞ –∏–≥—Ä -->
      <div class="card shadow-lg bg-light">
        <div class="card-body p-0">
          <ul class="nav nav-tabs nav-fill" id="gameTabs" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="completed-tab" data-bs-toggle="tab"
                      data-bs-target="#completed" type="button" role="tab">‚úÖ –ü—Ä–æ–π–¥–µ–Ω–æ</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="playing-tab" data-bs-toggle="tab"
                      data-bs-target="#playing" type="button" role="tab">üéÆ –ò–≥—Ä–∞—é</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="planned-tab" data-bs-toggle="tab"
                      data-bs-target="#planned" type="button" role="tab">üóìÔ∏è –ü–ª–∞–Ω–∏—Ä—É—é</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="abandoned-tab" data-bs-toggle="tab"
                      data-bs-target="#abandoned" type="button" role="tab">üëé –ë—Ä–æ—à–µ–Ω–æ</button>
            </li>
          </ul>

          <div class="tab-content p-3">
            <% 
              const completedGames = games.filter(g => g.status === 'completed');
              const playingGames = games.filter(g => g.status === 'playing');
              const plannedGames = games.filter(g => g.status === 'planned');
              const abandonedGames = games.filter(g => g.status === 'abandoned');
            %>

            <% const renderTable = (gameList, label) => { %>
              <% if (gameList.length > 0) { %>
                <div class="table-responsive">
                  <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                      <tr>
                        <th>–ù–∞–∑–≤–∞–Ω–∏–µ</th>
                        <th>–û—Ü–µ–Ω–∫–∞</th>
                        <th>–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π</th>
                        <th class="text-end">–î–µ–π—Å—Ç–≤–∏—è</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% gameList.forEach(game => { %>
                        <tr>
                          <td><%= game.game_name %></td>
                          <td>
                            <% if (game.rating !== null && game.rating !== undefined) { %>
                              <span class="badge bg-success fs-6"><%= game.rating %>/10</span>
                            <% } else { %>
                              <span class="text-muted">N/A</span>
                            <% } %>
                          </td>
                          <td><%= game.comment ? game.comment : '-' %></td>
                          <td class="text-end">
                            <form action="/delete-game" method="POST" class="d-inline">
                              <input type="hidden" name="gameId" value="<%= game.id %>">
                              <button type="submit" class="btn btn-sm btn-outline-danger" title="–£–¥–∞–ª–∏—Ç—å">
                                <i class="fas fa-trash-alt me-1"></i> –£–¥–∞–ª–∏—Ç—å
                              </button>
                            </form>
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              <% } else { %>
                <p class="text-muted text-center pt-3">–ù–µ—Ç –∏–≥—Ä —Å–æ —Å—Ç–∞—Ç—É—Å–æ–º "<%= label %>".</p>
              <% } %>
            <% } %>

            <div class="tab-pane fade show active" id="completed" role="tabpanel">
              <% renderTable(completedGames, "–ü—Ä–æ–π–¥–µ–Ω–æ") %>
            </div>

            <div class="tab-pane fade" id="playing" role="tabpanel">
              <% renderTable(playingGames, "–ò–≥—Ä–∞—é") %>
            </div>

            <div class="tab-pane fade" id="planned" role="tabpanel">
              <% renderTable(plannedGames, "–ü–ª–∞–Ω–∏—Ä—É—é") %>
            </div>

            <div class="tab-pane fade" id="abandoned" role="tabpanel">
              <% renderTable(abandonedGames, "–ë—Ä–æ—à–µ–Ω–æ") %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

